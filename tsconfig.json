{
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
